--CRIAR TABELA ---
CREATE TABLE TB_IP_PRODUTO (
	produto_id INT IDENTITY PRIMARY KEY,
    titulo VARCHAR(255),
    preco_compra DECIMAL(8,2) NOT NULL,
    preco_venda  DECIMAL(8,2) DEFAULT 0,
    desconto INT,
    cor  VARCHAR(255),
    categoria VARCHAR(255),
    data_entrada DATETIME,
    data_saida DATETIME,
    quantidade INT,
    tamanho VARCHAR(255),
    foto VARCHAR(255),
    forma_de_pagamento VARCHAR(255),
    observacao  VARCHAR(255),
    marca  VARCHAR(255),
    origem  VARCHAR(255)
);

---REMOVER TABELA---

DROP TABLE TB_IP_PRODUTO;

--- APAGAR DADOS DA TABELA----
TRUNCATE TABLE TB_IP_PRODUTO;

---INSERIR UM REGISTRO---
INSERT INTO TB_IP_PRODUTO(TITULO, PRECO_COMPRA, PRECO_VENDA)
	VALUES ('DESKTOP ACCER','100', '150');

---BUSCAR REGISTROS---
SELECT * FROM TB_IP_PRODUTO;

------UPDATE EM CAPOS----------
UPDATE TB_IP_PRODUTO SET
DESCONTO = '0'
WHERE PRODUTO_ID = 2;

----CONSTRAINTS----
ALTER TABLE

----ALTERAR UMA COLUNA---
ALTER TABLE TB_IP_PRODUTO 
ADD DEFAULT '0' FOR DESCONTO;

---- ALTERAR COLUNA(DEFININDO CHAVE PRIMARIA)
ALTER TABLE TB_IP_PRODUTO
ADD CONSTRAINT PK_TB_IP_PRODUTO
PRIMARY KEY(PRODUTO_ID)

---BUSCAR INFORMAÇÕES SOBRE A TABELA

EXEC SP_HELP TB_IP_PRODUTO

